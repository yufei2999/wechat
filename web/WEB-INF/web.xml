<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- wechat verify -->
    <servlet>
        <servlet-name>wechatVerify</servlet-name>
        <servlet-class>com.yufei.servlet.WechatVerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wechatVerify</servlet-name>
        <url-pattern>/wechatVerify</url-pattern>
    </servlet-mapping>

    <!-- wechat program -->
    <servlet>
        <servlet-name>wechat</servlet-name>
        <servlet-class>com.yufei.servlet.WechatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wechat</servlet-name>
        <url-pattern>/wechat</url-pattern>
    </servlet-mapping>
    
    <!-- web music -->
    <servlet>
        <servlet-name>web music</servlet-name>
        <servlet-class>com.yufei.servlet.MusicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>web music</servlet-name>
        <url-pattern>/music</url-pattern>
    </servlet-mapping>

    <!-- web music -->
    <servlet>
        <servlet-name>wechat music</servlet-name>
        <servlet-class>com.yufei.servlet.WechatMusicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wechat music</servlet-name>
        <url-pattern>/wechatMusic</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
